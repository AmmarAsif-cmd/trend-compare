generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comparison {
  id        String   @id @default(cuid())
  slug      String
  timeframe String // '7d' | '30d' | '12m' | '5y' | 'all'
  geo       String // '' worldwide or 'GB','US', etc.
  terms     Json // ["chatgpt","gemini"]
  series    Json // SeriesPoint[]
  stats     Json // computeStats output
  ai        Json? // generateCopy output (later LLM)
  category  String? // Detected category: "Tech", "Business", "Entertainment", etc.
  dataHash  String // hash(terms+timeframe+geo+series)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([slug, timeframe, geo], name: "slug_timeframe_geo")
  @@index([slug])
  @@index([category])
}

model KeywordCategory {
  id         String   @id @default(cuid())
  keyword    String   @unique // Normalized keyword (lowercase, trimmed)
  category   String   // music, movies, games, products, tech, people, brands, places, general
  confidence Int      // 0-100
  source     String   // 'ai' | 'api_probing' | 'manual'
  reasoning  String?  // Why this category was chosen
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([keyword])
  @@index([category])
}

model AIInsightUsage {
  id           String   @id @default(cuid())
  date         DateTime @unique // YYYY-MM-DD for daily tracking
  dailyCount   Int      @default(0)
  monthlyCount Int      @default(0)
  month        String   // YYYY-MM for monthly tracking (not unique - multiple days per month)
  lastReset    DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([month]) // Add index for efficient monthly queries
}

model BlogPost {
  id              String   @id @default(cuid())
  slug            String   @unique
  title           String
  excerpt         String   @db.Text
  content         String   @db.Text // Markdown content
  category        String   // Technology, Entertainment, Business, etc.
  tags            String[] // ["AI", "trends", "comparison"]

  // SEO fields
  metaTitle       String?
  metaDescription String?
  keywords        String[] // SEO keywords

  // Related comparison
  comparisonSlug  String?  // Links to comparison page if relevant

  // Publishing workflow
  status          String   @default("draft") // draft, pending_review, approved, published, rejected
  autoGenerated   Boolean  @default(false) // True if AI-generated

  // Scheduling
  publishedAt     DateTime?
  scheduledFor    DateTime?

  // Metadata
  authorNote      String?  @db.Text // Your notes/edits
  generatedPrompt String?  @db.Text // AI prompt used (for debugging)
  references      Json?    // Array of citations/sources used in the post
  readTimeMinutes Int      @default(5)
  viewCount       Int      @default(0)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([status])
  @@index([category])
  @@index([publishedAt])
  @@index([scheduledFor])
}

model KeywordPair {
  id          String   @id @default(cuid())
  termA       String   // First term (e.g., "iPhone 15")
  termB       String   // Second term (e.g., "Samsung S24")
  category    String   // music, movies, games, products, tech, people, brands, places, general

  // Quality metrics
  qualityScore     Int      // 0-100 overall quality score
  searchVolume     String?  @default("unknown") // high, medium, low, unknown

  // Status and approval
  status      String   @default("pending") // pending, approved, rejected, archived
  approvedBy  String?  // Admin who approved (can be email or name)
  approvedAt  DateTime?

  // Source tracking
  source      String   @default("manual") // manual, imported, suggested, ai_generated
  importedFrom String? // URL or file name if imported

  // Usage tracking
  timesUsed   Int      @default(0) // How many times this pair was seeded
  lastUsedAt  DateTime?

  // Notes and tags
  notes       String?  @db.Text // Admin notes
  tags        String[] @default([]) // Custom tags for organization

  // Metadata
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([termA, termB], name: "unique_pair") // Prevent duplicates
  @@index([category])
  @@index([status])
  @@index([qualityScore])
  @@index([source])
}
