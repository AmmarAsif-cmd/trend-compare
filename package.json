{
  "name": "trend-compare",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "node scripts/prisma-generate-safe.js",
    "dev": "next dev",
    "build": "node scripts/prisma-generate-safe.js && node scripts/migrate-if-db-available.js && next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "migrate": "prisma migrate deploy",
    "blog:generate": "tsx scripts/generate-blog-posts.ts",
    "screenshots": "tsx scripts/capture-screenshots.ts",
    "refresh:all": "tsx scripts/refresh-all-comparisons.ts",
    "refresh:trending": "tsx -e \"import { refreshTrendingComparisons } from './lib/refresh-comparisons'; refreshTrendingComparisons(20).then(r => console.log('Refreshed:', r));\"",
    "seed": "tsx scripts/seed-comparisons.ts",
    "seed:music": "tsx scripts/seed-comparisons.ts --category music --limit 50",
    "seed:movies": "tsx scripts/seed-comparisons.ts --category movies --limit 50",
    "seed:games": "tsx scripts/seed-comparisons.ts --category games --limit 50",
    "seed:tech": "tsx scripts/seed-comparisons.ts --category tech --limit 50",
    "seed:products": "tsx scripts/seed-comparisons.ts --category products --limit 50",
    "seed:bulk": "tsx scripts/seed-bulk.ts",
    "seed:scheduler": "tsx scripts/seed-scheduler.ts",
    "seed:all": "tsx scripts/seed-comparisons.ts --all --delay 5000 --skip-existing",
    "keywords:import": "tsx scripts/import-keywords.ts",
    "keywords:import-seed": "tsx scripts/import-seed-keywords.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@prisma/client": "^6.18.0",
    "@sentry/nextjs": "^10.23.0",
    "chart.js": "^4.5.1",
    "confusables": "^1.1.1",
    "dotenv": "^17.2.3",
    "dynamic": "^4.2.2",
    "google-trends-api": "^4.9.2",
    "is-url-superb": "^6.1.0",
    "leo-profanity": "^1.8.0",
    "lucide-react": "^0.552.0",
    "next": "16.0.7",
    "nodemailer": "^6.9.16",
    "puppeteer": "^23.11.1",
    "react": "19.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "19.2.0",
    "react-markdown": "^10.1.0",
    "remove-accents": "^0.5.0",
    "resend": "^4.8.0",
    "slugify": "^1.6.6",
    "tsx": "^4.21.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^4.0.14",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "happy-dom": "^20.0.10",
    "prisma": "^6.18.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.14"
  }
}
